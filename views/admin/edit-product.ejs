<%- include('../shared-layouts/header.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">

    <body>
        <%- include('../shared-layouts/navigation.ejs') %>
            <h1 class="add-product-title">Add your product</h1>

            <main>
                <form class="product-form add-product" action="/admin/add-product" method="POST">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title">
                    </div>

                    <div class="form-control">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="price">
                    </div>

                    <div class="form-control">
                        <label for="imgUrl">Image url</label>
                        <input type="text" name="imgUrl" id="imgUrl" />
                    </div>

                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea type="text" name="description" id="description"></textarea>
                    </div>

                    <button class="btn" type="submit">Add Product</button>
                </form>
            </main>
            <%- include('../shared-layouts/footer.ejs') %>